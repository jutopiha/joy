      <div class="wrapper content">
        <h2>지출 내역 입력하기</h2>
        <div class="input_form">
          <form action="post/expense?uid=web" method="post" id="input_expense">
            <div>
              <span>날짜</span>
              <input type="date" name="date" required/>
            </div>
            <div>
              <span>시간</span>
              <input type="time" name="time" required/>
            </div>
            <div>
              <span>금액</span>
              <input type="number" name="money" required/>
            </div>
            <div>
              <span>메모</span>
              <input type="text" name="memo" />
            </div>
            <div>
              <span>분류</span>
              <select name="category">
                <option value="food">식비</option>
                <option value="fare">교통비</option>
                <option value="culture">문화</option>
                <option value="living">생활</option>
                <option value="snack">음료/간식</option>
                <option value="edu">교육</option>
                <option value="utility">공과금</option>
                <option value="etc">기타</option>
              </select>
            </div>
            <div>
              <span>결제수단</span>
              <select name="payMethod">
                <option value="현금">현금</option>
                <option value="카드">카드</option>
              </select>
            </div>
            <div class="submit_btn">
              <button type="submit">SUBMIT</button>
            </div>
          </form>
